<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:elevation="3dp"
        android:background="@color/white">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageview_turnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/back_out" />

    </RelativeLayout>

    <com.dgut.collegemarket.view.viewswitcher.SlidingSwitcherView
        android:id="@+id/slidingLayout"
        android:layout_width="fill_parent"
        android:layout_height="220dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/hello_2017_new" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/advertisement3" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/advertisement2" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/advertisement1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dip"
            android:layout_height="20dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dip"
            android:orientation="horizontal"></LinearLayout>
    </com.dgut.collegemarket.view.viewswitcher.SlidingSwitcherView>

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_goods_item_corners"
        android:elevation="100dip"
        android:padding="5dp">


        <ScrollView
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_title"
            android:layout_marginBottom="5dp"
            android:padding="10dp">


            <TextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="" />
        </ScrollView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level"
            android:layout_alignBottom="@+id/level"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/level"
            android:text="昵称"
            android:textColor="#000"
            android:textSize="18dp" />

        <com.dgut.collegemarket.fragment.widgets.AvatarView
            android:id="@+id/image_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/sale"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/unknow_avatar" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/subscribe_button"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="6dp"
            android:text="时间" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_avatar"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:text="等级" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/level"
            android:layout_marginTop="5dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="" />

        <Button
            android:id="@+id/subscribe_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_login"
            android:text="+关注"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginEnd="7dp"
            android:layout_alignTop="@+id/image_avatar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/messages_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/subscribe_button"
            android:layout_gravity="right"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@+id/subscribe_button"
            android:background="@drawable/btn_login"
            android:text="私信"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
