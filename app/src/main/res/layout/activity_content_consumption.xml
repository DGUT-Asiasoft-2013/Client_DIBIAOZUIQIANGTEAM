<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_weight="1.2"
    android:background="#E0E0E0"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:background="@color/white"
        android:elevation="3dp">


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="交易详情"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageview_turnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/back" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linear_consumption"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <com.dgut.collegemarket.fragment.widgets.AvatarView
                android:id="@+id/consumption_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/cause"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="微信支付"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_below="@+id/linear_consumption"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#E0E0E0"/>

        <LinearLayout
            android:id="@+id/linear_consumption1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="交易金额"
                android:textColor="#818181"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:text="￥999.0"
                android:textSize="25dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_webchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/linear_consumption1"
            android:layout_alignParentStart="true">

            <TextView
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前状态"
                android:layout_marginLeft="10dp"
                android:textColor="#818181"
                android:textSize="14dp" />

            <TextView
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:text="已完成"
                android:textColor="#818181"
                android:textSize="14dp"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_consumption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/linear_webchat"
            android:orientation="horizontal">

            <TextView
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间"
                android:layout_marginLeft="10dp"
                android:textColor="#818181"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:text="2017-01-01 00:00"
                android:textSize="14dp"
                android:textColor="#818181"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_consumption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_below="@+id/linear_consumption3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="交易单号"
                android:textColor="#818181"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/consumption_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_gravity="center|right"
                android:text="1"
                android:textSize="14dp"
                android:textColor="#818181"/>

        </LinearLayout>

        <View
            android:layout_below="@+id/linear_consumption4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#818181"/>

        <LinearLayout
            android:id="@+id/linear_consumption5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_consumption4"
            android:orientation="horizontal">

            <TextView
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="请联系客服反馈问题"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:gravity="right"
                android:layout_gravity="center|right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="电话：800-820-8820"
                android:textColor="#818181"
                android:textSize="14dp" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>