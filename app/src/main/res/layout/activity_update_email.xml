<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_user_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dgut.collegemarket.activity.myprofile.userInfo.UpdateUserNameActivity">
    <RelativeLayout
        android:id="@+id/rl_post_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改邮箱"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            />
    </RelativeLayout>
    <fragment
        android:layout_marginTop="10dp"
        android:id="@+id/fragment_update_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.dgut.collegemarket.fragment.InputCell.SimpleTextInputCellFragment"
        tools:layout="@layout/fragment_inputcell_simpletext" />
    <Button
        android:id="@+id/btn_update_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_login"
        android:layout_margin="5dp"
        android:text="@string/update"
        android:textColor="@android:color/white"/>
</LinearLayout>
